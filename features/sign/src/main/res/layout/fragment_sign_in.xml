<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/step4">

        <TextView
            android:id="@+id/tv_create"
            style="@style/HeaderTextStyle"
            android:layout_margin="@dimen/step4"
            android:text="@string/features_sign_sign_in" />

        <ImageView
            android:id="@+id/iv_entrance"
            android:layout_width="match_parent"
            android:layout_height="@dimen/step50"
            android:layout_marginBottom="@dimen/step4"
            android:src="@drawable/auth" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tf_email"
            style="?attr/textInputOutlinedDenseStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/step4"
            android:hint="@string/features_sign_email"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/it_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tf_password"
            style="?attr/textInputOutlinedDenseStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/features_sign_password"
            app:endIconMode="password_toggle"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/it_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_sign_in"
            style="@style/HyperlinkTextStyle"
            android:layout_gravity="center"
            android:layout_margin="@dimen/step8"
            android:text="@string/features_sign_create_account_link"
            android:textColor="@color/blue_hyperlink" />

        <include layout="@layout/space" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="@dimen/step3"
                android:text="@string/features_sign_enter" />

        </FrameLayout>

        <include
            android:id="@+id/loading"
            layout="@layout/fragment_loading" />

    </LinearLayout>

</ScrollView>