<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CommonTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_87</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="LightTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_60</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="Header2TextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_87</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_header_2</item>
    </style>

    <style name="HeaderTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_87</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="HyperlinkTextStyle" parent="CommonTextStyle">
        <item name="android:textColor">@color/blue_hyperlink</item>
    </style>

    <style name="CommonProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@color/green_main</item>
        <item name="android:indeterminateTintMode">src_atop</item>
    </style>

</resources>